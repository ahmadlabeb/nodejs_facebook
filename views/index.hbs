
<div class="container-fluid" >
    <div class="container marg-panel">
        <div class="row">
            <div class="col-sm-11"></div>
        <div class="col-sm-1">
           <a href="#"> <span class="glyphicon glyphicon-plus text-right" data-toggle="modal" data-target="#myModal"></span></a>
        </div>
          <!--  <ul class="nav navbar-nav navbar-right">
                <li><a href="#" class="glyphicon glyphicon-plus">Home</a></li>
            </ul>-->
        </div>
    </div>
    <div class="container">
        <div class="panel panel-success">
            <div class="panel-heading">Table Admin</div>
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>full name facebook</th>
                        <th class="text-center">phone</th>
                        <th class="text-center">age</th>
                        <th class="text-center">Edit</th>
                        <th class="text-center">Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{# each items}}

                    <tr>
                        <td>{{this._facebook}}</td>
                        <td class="text-center">{{this.phone}}</td>
                        <td class="text-center">{{this.age}}</td>
                        <td class="text-center">
                            <a href="/update/{{this._id}}"  data-toggle="modal" data-target="#update" type="submit"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>

                        </td>
                        <td class="text-center"><a href="/{{this._id}}/delete"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
                    </tr>
                    {{/each}}

                    </tbody>
                </table>
        </div>
        <a href="/view">view</a>
    </div>
</div>
<div class="modal fade" id="myModal"  role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">

                <div class="container">
                    <form class="form-horizontal" action="/insert" method="post">
                        <div class="form-group">
                            <label class="control-label col-sm-1" for="email">faceboook:</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" name="facebook" id="facebook" placeholder="Enter your url">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-1" for="phone">phone:</label>
                            <div class="col-sm-5">
                                <input type="tel" class="form-control" name="phone" id="phone" placeholder="Enter password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-1 " for="age">age:</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" name="age" id="age" placeholder="Enter password">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-1 col-sm-1">
                                <button type="submit" class="btn btn-default">insert</button>
                            </div>
                        </div>
                    </form>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
<!--modal update-->
<div class="modal fade" id="update" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <div class="container">
                    <form class="form-horizontal" action="/update/{{this._id}}" method="put">
                        <div class="form-group">
                            <label class="control-label col-sm-1" for="email">faceboook:</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" name="facebookupdate" id="facebookupdate" placeholder="Enter your url">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-1" for="phone">phone:</label>
                            <div class="col-sm-5">
                                <input type="tel" class="form-control" name="phoneupdate" id="phoneupdate" placeholder="Enter password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-1 " for="age">age:</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" name="ageupdate" id="ageupdate" placeholder="Enter password">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-1 col-sm-1">
                                <button type="submit" class="btn btn-default">Update</button>
                            </div>
                        </div>
                    </form>
                </div>



            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

